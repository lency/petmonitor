<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="82.0dip"
    android:paddingRight="6.5dip"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/mylistitem_img_head"
        android:contentDescription="@string/stubImageDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="6.5dip"
        android:src="@drawable/smallheader" />
    
    <ImageButton
        android:id="@+id/mylistitem_button_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/locator_phone"
        android:contentDescription="@string/stubImageDescription"
        android:background="@android:color/transparent"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/mylistitem_button_call"
        android:layout_toRightOf="@+id/mylistitem_img_head"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mylistitem_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/listtext"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mylistitem_text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/littletext"
            android:textSize="13.0sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>