<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="whereru_widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="title_base" parent="@style/whereru_widget">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="title" parent="@style/title_base">
        <item name="android:background">@drawable/title_bg</item>
    </style>
    <style name="arrow_up" parent="@style/whereru_widget">
        <item name="android:background">@drawable/arrow_up</item>
    </style>
    <style name="arrow_down" parent="@style/whereru_widget">
        <item name="android:background">@drawable/arrow_down</item>
    </style>
    <style name="edittext_name_base">
        <item name="android:textSize">@dimen/edittext_name_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/edittext_name_color</item>
    </style>
    <style name="edittext_name_height_fill" parent="@style/edittext_name_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="edittext_base">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:background">@drawable/edit_text_img</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding</item>
    </style>
    <style name="edit_text" parent="@style/edittext_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="button_normal" parent="@style/whereru_widget">
        <item name="android:textSize">@dimen/button_ok_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    
</resources>
